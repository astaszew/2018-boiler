{
  "compilerOptions": {
    "outDir": "js/",
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-native",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "moduleResolution": "node",
    "lib": [ "es2015", "dom" ],
    "preserveConstEnums": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": [
        "*",
        "types/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "@types/**/*"
  ],
  "typeRoots": [
    "node_modules/@types",
    "@types"
  ],
  "exclude": [
    "js/"
  ]
}
